# Environment variables for Docker Compose
# Copy this to .env and modify as needed

# Database
DB_PASSWORD=your_secure_password_here

# JWT Secret (base64 encoded, min 512 bits for HS512)
# Generate with: echo -n "your-very-long-secret-key-at-least-64-characters-long-for-security" | base64
JWT_SECRET=your_base64_encoded_jwt_secret_here

# Mail Configuration (optional - for production)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

